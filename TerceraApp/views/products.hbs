
<table id="myTable" class="table table-striped table-responsive-md btn-table">
  <thead>
    <tr>
      <th>ID</th> {{!-- Scope = negritas --}}
        <th class="th-sm" >Nombre</th>
        <th class="th-sm">Precio</th>
        <th class="th-sm">Picture</th>
        <th class="th-sm">Categoría</th>
        <th class="th-sm">Descripción</th>
        
    </tr>
  </thead>

  <tbody>
      {{#products}}

      <tr> 
            <br>
            <td>{{_id}}</td>
            <td>{{name}}</td>
            <td>{{price}}</td>
            <td>{{image}}</td>
            <td>{{category}}</td>
            <td>{{description}}</td>
            <td>
              <form action="/api/product/{{_id}}" method="GET">
                
                <button class="btn btn-primary" type="submit">Editar</button>
              </form>
            </td>
            <td>
              <form action="/api/product/{{_id}}?_method=DELETE" method="post">
                  <input type="hidden" name="_method" value="DELETE">
                <button class="btn btn-primary" type="submit">Eliminar</button>
              </form>
            </td>
        </tr>
        {{/products}}
  </tbody>